doctype html
html
    head
        title AcordWEB
        meta(charset="utf-8")
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(rel='stylesheet', href='/stylesheets/bootstrap.css')
        link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
    body.bg
        .pt-5
            h1.text-center.loginHeader Editar Perfil
            .container
                .row
                    div(class="col-md-5 mx-auto")
                        div(class="card card-body")
                            p(style="text-align: center") Introduza as suas credenciais
                            .form
                                form(action="/editarPerfil" method="POST")
                                    div(class="form-group required")
                                        label Nome
                                        input.form-control(type="text" name="name" value=profile.name required)
                                    div(class="form-group required")
                                        label Email
                                        input.form-control(type="email" name="email" value=profile.email required)
                                    div(class="form-group required")
                                        label Idade
                                        input.form-control(type="number" name="idade" min="1" max="130" value=profile.idade required)
                                    div(class="form-group required")
                                        label Profissão
                                        input.form-control(type="text" name="profissao" value=profile.profissao required)
                                    div(class="form-group required")
                                        label Localidade
                                        input.form-control(type="text" name="localidade" value=profile.localidade required)
                                    div(class="form-group required")
                                        label Username
                                        input.form-control(type="text" name="username" value=profile.username disabled)
                                    div(class="form-check-inline")
                                        if adm
                                          input.form-check-input(type="radio" name="level" id="inlineCheckbox1" value="admin" required checked)
                                        else
                                          input.form-check-input(type="radio" name="level" id="inlineCheckbox1" value="admin" required)
                                        label.form-check-label(for="inlineCheckbox1") Administrador
                                    div(class="form-check-inline")
                                        if adm
                                          input.form-check-input(type="radio" name="level" id="inlineCheckbox2" value="normal" required)
                                        else
                                          input.form-check-input(type="radio" name="level" id="inlineCheckbox2" value="normal" required checked)
                                        label.form-check-label(for="inlineCheckbox2") Consumidor
                                    br
                                    br
                                    div(class="form-group pt-1")
                                        button(class="btn btn-primary btn-block" type="submit") Submeter
                                    if message != 'OK'
                                        p.rerror #{message}
                            hr
                            a.volt(href="/perfil"): i.fa.fa-arrow-left &nbsp&nbspVoltar Atrás