doctype html
html
    head
        title AcordWEB
        meta(charset="utf-8")
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(rel='stylesheet', href='/stylesheets/bootstrap.css')
        link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
    body.bg
        .pt-5
            h1.text-center.loginHeader Iniciar Sessão

        .container
            .row
                div(class="col-md-5 mx-auto")
                    div(class="card card-body")
                        p(style="text-align: center") Introduza as suas credenciais
                        .form
                            form(action="/login" method="POST")
                                div(class="form-group required")
                                    label Username
                                    input.form-control(type="text" name="username" required)
                                div(class="form-group required")
                                    label(class="d-flex flex-row align-items-center") Password
                                    input.form-control(class="form-control" type="password" name="password" required)
                                div(class="form-group pt-1")
                                    button(class="btn btn-primary btn-block" type="submit") Login
                                if message != 'OK'
                                    p.lerror #{message}
                            p(class="small-xl pt-3 text-center")
                                span.text-muted Ainda não estás registado?
                                a(href="/registo") &nbsp Criar conta
                        hr
                        a.volt(href="/"): i.fa.fa-arrow-left &nbsp&nbspVoltar ao menu 
    